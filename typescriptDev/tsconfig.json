{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "sourceMap": true, //为了调试ts代码的时候映射到编译后的文件上，sourceMap必须要开启
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "includes": [
        "src/**/*"
    ]
}